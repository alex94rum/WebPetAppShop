@model Login

<form method="post">
    <div class="row justify-content-center align-items-center">
        <div class="col-6 text-center">
            <div>
                <h3>Вход</h3>
            </div>

            <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>

            <div>
                <input class="form-control" asp-for="UserName" placeholder="Логин" />
                <span asp-validation-for="UserName" />
            </div>
            <br />

            <div>
                <input class="form-control" asp-for="Password" placeholder="Пароль" />
                <span asp-validation-for="Password" />
            </div>
            <br />

            <div>
                <input type="checkbox" name="remember" value="true" style="margin-right: 8px;" />Запомнить меня?
            </div>
            <br />

            <button class="btn btn-success w-75" type="submit" asp-controller="Account" asp-action="Login">Войти</button>
            <br />
            <a asp-controller="Account" asp-action="Register">Регистрация новго пользователя</a>
        </div>
    </div>
</form> 