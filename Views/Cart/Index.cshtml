@model CartViewModel

@if (Model == null || (!Model?.Items?.Any() ?? false))
{
    <h3>Корзина пустая</h3>
}
else
{
    <div class="row">
        <div class="col">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Цена</th>
                        <th>Кол-во</th>
                        <th>Общая стоимость</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cartIteme in Model.Items)
                    {
                        <tr>
                            <th>@cartIteme?.Product?.Name</th>
                            <th>@cartIteme?.Product?.Cost$</th>
                            <th>@cartIteme?.Amount</th>
                            <th>@cartIteme?.Cost$</th>
                            <th>
                                <a class="btn btn-light" href="/cart/add?productId=@cartIteme?.Product?.Id" role="button">+</a>
                                <a class="btn btn-light" href="/cart/decreasItemAmount?productId=@cartIteme?.Product?.Id" role="button">-</a>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text" style="text-align: right">
                <h3>Итого:</h3>
                <h3>@Model.Cost$</h3>
            </div>

            <div class="text-center">
                <a class="btn btn-dark" href="/home/index" role="button">Продолжить покупки</a>
                <a class="btn btn-success" href="/order/index" role="button">Оформить заказ</a>
                <a class="btn btn-danger" href="/cart/clear" role="button">Очистить корзину</a>
            </div>
        </div>
    </div>
}