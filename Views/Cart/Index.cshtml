@model Cart

@if (Model == null)
{
    <h3>Корзина пустая</h3>
}
else
{
    <div class="row">
        <div class="col">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Цена</th>
                        <th>Кол-во</th>
                        <th>Общая стоимость</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cartIteme in Model.Items)
                    {
                        <tr>
                            <th>@cartIteme?.Product?.Name</th>
                            <th>@cartIteme?.Product?.Cost$</th>
                            <th>@cartIteme?.Amount</th>
                            <th>@cartIteme?.Cost$</th>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text" style="text-align: right">
                <h3>Итого:</h3>
                <h3>@Model.Cost$</h3>
            </div>

            <div class="text-center">
                <a class="btn btn-dark" href="/home/index" role="button">Продолжить покупки</a>
                <a class="btn btn-success" href="#" role="button">Оформить</a>
            </div>
        </div>
    </div>
}