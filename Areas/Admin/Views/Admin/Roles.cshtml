@model List<Role>

<div class="row">
    @await Html.PartialAsync("AdminLeftMenu")

    <div class="col-9">
        <h3>Список ролей</h3>

        <a class="btn btn-primary" asp-controller="Admin" asp-action="AddRole">Добавить новую роль</a>

        <table class="table">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Название</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].Name</td>
                        <td><a asp-controller="Admin" asp-action="RemoveRole" asp-route-name="@Model[i].Name">Удалить</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

