@model List<Order>

<div class="row">
    @await Html.PartialAsync("AdminLeftMenu")

    <div class="col-9">
        <h3>Список заказов</h3>

        <table class="table">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Сумма</th>
                    <th>Статус</th>
                    <th>Дата</th>
                    <th>Время</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].Cost$</td>
                        <td>@EnumHelper.GetDisplayName(Model[i].Status)</td>
                        <td>@Model[i].CreatedDataTime.ToShortDateString()</td>
                        <td>@Model[i].CreatedDataTime.ToShortTimeString()</td>
                        <td><a 
                            asp-area="Admin" 
                            asp-controller="Order" 
                            asp-action="Detail" 
                            asp-route-orderId="@Model[i].Id" 
                            asp-route-number="@(i + 1)">Подробнее</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
