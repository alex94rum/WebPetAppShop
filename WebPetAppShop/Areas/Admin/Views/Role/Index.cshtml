@model List<Role>

<div class="row">
    @await Html.PartialAsync("AdminLeftMenu")

    <div class="col-9">
        <h3>Список ролей</h3>

        <a 
            class="btn btn-primary"
            asp-area="Admin"
            asp-controller="Role" 
            asp-action="Add">Добавить новую роль</a>

        <table class="table">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Название</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].Name</td>
                        <td><a 
                            asp-area="Admin"
                            asp-controller="Role"
                            asp-action="Remove" 
                            asp-route-name="@Model[i].Name">Удалить</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

