@model UserAccount

<div class="row">
    @await Html.PartialAsync("AdminLeftMenu")

    <div class="col-6">
        <h3>Пользователь @Model.Name</h3>

        <table class="table">

            <tr>
                <td>Лгогин</td>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <td>Телефон</td>
                <td>@Model.Phone</td>
            </tr>
            <tr>
                <td>Пароль</td>
                <td>@Model.Password</td>
            </tr>

        </table>
        <br />
        <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
            Действия
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="ChangePassword" asp-route-name="@Model.Name">Смена пароля</a>
            <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-name="@Model.Name">Редактирование данных</a>
            <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="EditRights" asp-route-name="@Model.Name">Права доступа</a>
            <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="Delet" asp-route-name="@Model.Name">Удалить</a>
        </div>
    </div>
</div>
